<aside id="right-sidebar" class="text-sm sidebar-sticky overflow-y-auto pt-6 space-y-2">
  {%- block toc_before %}{%- endblock -%}
  {% if toc.strip() %}
  <p class="font-medium" style="margin-bottom: 0.5rem">On this page</p>
  {{ toc }}
  {% endif %}
  {%- block toc_after %}
    {%- if theme_show_scrolltop|tobool %}
      {%- include "scrolltop.html.jinja" %}
    {%- endif %}
  {%- endblock -%}
</aside>
