{%- set only_main_nav = sidebars == ["sidebar_main_nav_links.html.jinja"] -%}
{%- if not only_main_nav and sidebars|length > 0 -%}
    <aside id="left-sidebar"
           class="site-layout__sidebar site-sidebar site-sidebar--primary"
           :aria-hidden="!showSidebar"
           :class="{ 'site-sidebar--visible': showSidebar }">
    {%- else %}
        <aside id="left-sidebar"
               class="site-layout__sidebar site-sidebar site-sidebar--primary"
               :aria-hidden="!showSidebar"
               :class="{ 'site-sidebar--visible': showSidebar }">
        {%- endif %}
        <a href="{{ pathto(master_doc) }}"
           class="site-sidebar__brand">
            {%- if logo_url %}
                <img height="16"
                     width="16"
                     class="site-sidebar__brand-image site-sidebar__brand-image--single"
                     src="{{ logo_url }}"
                     alt="Logo" />
            {%- endif -%}
            {%- if dark_logo and not logo_url %}
                <img width="16"
                     height="16"
                     class="site-sidebar__brand-image site-sidebar__brand-image--dark"
                     src="{{ pathto('_static/' + dark_logo, 1) }}"
                     alt="Logo" />
            {%- endif -%}
            {%- if light_logo and not logo_url %}
                <img width="16"
                     height="16"
                     class="site-sidebar__brand-image site-sidebar__brand-image--light"
                     src="{{ pathto('_static/' + light_logo, 1) }}"
                     alt="Logo" />
            {%- endif -%}
            <span class="site-sidebar__brand-title">{{ docstitle }}</span>
        </a>
        <div class="site-sidebar__scroll">
            <div class="site-sidebar__content">
                {%- for section in sidebars %}
                    {%- include section %}
                {%- endfor %}
            </div>
        </div>
        <button type="button"
                @click="showSidebar = false"
                data-sidebar-close
                class="site-sidebar__close hidden">
            <i class="fa-light fa-sidebar-flip"></i>
        </button>
    </aside>
