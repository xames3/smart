{% block feedback %}
    {% set fb_title = meta["fb:title"] if meta and meta["fb:title"] else "Tell me what you think" %}
    {% set fb_description = meta["fb:description"] if meta and meta["fb:description"] else "You can send me your feedback via email by clicking the button below." %}
    {% set fb_submit = meta["fb:submit"] if meta and meta["fb:submit"] else "Send feedback" %}
    <div class="site-feedback-shell">
        <div class="site-feedback-shell__inner">
            <p class="site-feedback-shell__title">{{ fb_title }}</p>
            <p class="site-feedback-shell__subtitle">{{ fb_description }}</p>
        </div>
        <a href="mailto:{{ project.email }}?subject=Feedback about {{ title|striptags|e }}"
           class="site-feedback-shell__button"
           data-index="0"
           aria-label="{{ fb_submit }}">{{ fb_submit }}</a>
    </div>
{% endblock feedback %}
