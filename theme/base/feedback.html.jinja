{% block feedback %}
    <div class="feedback-shell">
        <div class="feedback-shell__inner">
            <p class="feedback-shell__title">Tell me what you think</p>
            <p class="feedback-shell__subtitle">
                You can send me your feedback via email by clicking the button below.
            </p>
        </div>
        <a href="mailto:{{ project_email }}?subject=Feedback about {{ title|striptags|e }}"
           class="feedback-shell__button"
           data-index="0"
           aria-label="Send feedback">Send feedback</a>
    </div>
{% endblock feedback %}
