<button id="scrolltop" x-cloak @click="window.scrollTo({top: 0, behavior: 'smooth'})"
  class="fixed bottom-8 right-8 py-2 px-4 z-10 rounded-lg text-xs text-white transition-all duration-1000 hover:bg-gray-950 focus:bg-gray-950"
  :class="{'opacity-0 invisible' : !showScrollTop}" style="background-color: hsl(0, 0%, 12.55%);">
  Back to top
</button>
