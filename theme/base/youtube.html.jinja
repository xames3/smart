{% block youtube %}
<div class="flex justify-center my-8">
  <div class="flex-col gap-2">
    <iframe class="rounded" width="auto" height="auto" src="{{ url }}&controls=1&modestbranding=1"
      title="YouTube" frameborder="0" allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen></iframe>
      {%- if caption %}
        <figcaption class="mt-4">{{ caption }}</figcaption>
      {%- endif -%}
  </div>
</div>
{% endblock youtube %}
