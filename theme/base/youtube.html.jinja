{% block youtube %}
<div class="flex justify-center my-8" style="border-radius: var(--radius);">
  <div class="w-full" style="border-radius: var(--radius);">
    <div class="relative w-full" style="padding-bottom: 56.25%; border-radius: var(--radius);">
      <iframe class="absolute top-0 left-0 w-full h-full"
        style="border-radius: var(--radius);" 
        src="{{ url }}&controls=1&modestbranding=1&color=white" 
        title="YouTube"
        frameborder="0" 
        allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen></iframe>
    </div>
      {%- if caption %}
        <figcaption class="mt-4">{{ caption }}</figcaption>
      {%- endif -%}
  </div>
</div>
{% endblock youtube %}
