{%- if theme_main_nav_links|tobool -%}
<nav class="site-sidebar__mobile-links">
  <ul class="site-sidebar__mobile-list">
    {%- for text,url in theme_main_nav_links.items() %}
    <li class="site-sidebar__mobile-item">
      {%- if url.startswith("http") %}
      <a class="site-sidebar__mobile-link" href="{{ url }}" rel="nofollow noopener">{{ text }}</a>
      {%- else %}
      <a class="site-sidebar__mobile-link" href="{{ pathto(url) }}">{{ text }}</a>
      {%- endif %}
    </li>
    {%- endfor %}
  </ul>
</nav>
{%- endif %}
