{% block author %}
    <aside class="site-author">
        <div class="site-author__profile"
             id="author">
            <img class="site-author__avatar"
                 src="{{ avatar }}"
                 alt="{{ name }}'s photo">
            <div class="site-author__details">
                <a href="mailto:{{ email }}?subject={{ subject }}"
                   class="site-author__name"
                   data-index="0"
                   aria-label="Ask {{ name|safe }} via email">{{ name|safe }}</a>
                <p class="site-author__bio">{{ about }}</p>
            </div>
        </div>
        <div class="site-author__social">
            <a href="{{ linkedin|d('#') }}"
               target="_blank"
               rel="noopener noreferrer"
               class="site-author__social-link site-author__social-link--linkedin"
               aria-label="Check out {{ name|safe }} on LinkedIn">
                <i class="fa-brands fa-linkedin"
                   aria-hidden="true"></i>
            </a>
            <a href="{{ github|d('#') }}"
               target="_blank"
               rel="noopener noreferrer"
               class="site-author__social-link site-author__social-link--github"
               aria-label="Check out {{ name|safe }} on GitHub">
                <i class="fa-brands fa-github"
                   aria-hidden="true"></i>
            </a>
        </div>
        <div class="site-author__meta">
            <div class="site-author__meta-group">
                <p id="readingTime"
                   class="site-author__reading-time"></p>
                <a class="site-author__copy copy-url"
                   data-tooltip="Copy article URL to clipboard"
                   href="#">
                    <i class="fa-regular fa-link-simple"
                       aria-hidden="true"></i>
                    <span>Copy</span>
                </a>
            </div>
            <p class="site-author__timestamp"
               id="calendarIcon">{{ timestamp|d("Updated Today") }}</p>
        </div>
    </aside>
{% endblock author %}
