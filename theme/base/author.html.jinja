{% block author %}
<div class="flex-col text-sm text-muted-foreground">
  <div class="flex justify-center mb-4 items-center" id="author">
    <img class="avatar mr-2" src="{{ avatar }}" alt="{{ name }}'s photo">
    <a href="mailto:{{ email }}?subject={{ subject }}" class="font-medium text-foreground author-name mr-2"
      data-index="0" aria-label="Ask {{ name|safe }} via email">{{ name|safe }}</a>
    <p class="text-sm text-muted-foreground">{{ about }}</p>
  </div>
  <div class="flex gap-4 justify-center mb-64">
    <a href="{{ linkedin|d('#') }}" target="_blank" aria-label="Check out {{ name|safe }} on LinkedIn"><i
        class="fa-brands fa-linkedin" style="color: #0a66c2;"></i></a>
    <a href="{{ github|d('#') }}" target="_blank" aria-label="Check out {{ name|safe }} on GitHub"><i
        class="fa-brands fa-github" style="color:  #38434f;"></i></a>
  </div>
  <div class="flex justify-between mb-4">
    <div class="flex gap-2 items-center mr-2">
      <p id="readingTime"></p>
      <a @click.prevent="window.navigator.clipboard.writeText($el.href); $el.classList.add('show-tooltip'); $el.setAttribute('data-tooltip', 'Copied!'); setTimeout(() => { $el.classList.remove('show-tooltip'); }, 2000);"
        data-tooltip="Copy article URL to clipboard" href="#"><i class="fa-regular fa-link mr-1"></i>Copy URL</a>
    </div>
    <p class="text-sm text-muted-foreground" id="calendarIcon">{{ timestamp|d("Updated Today") }}</p>
  </div>
</div>
{% endblock author %}
