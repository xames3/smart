{% block author %}
<div class="flex-col text-sm text-muted-foreground">
  <div class="flex justify-center mb-4 items-center" id="author">
    <img class="avatar mr-2" src="{{ avatar }}" alt="{{ name }}'s photo">
    <a href="mailto:{{ email }}?subject={{ subject }}" class="font-medium text-foreground author-name mr-2"
      data-index="0" aria-label="Ask {{ name|safe }} via email">{{ name|safe }}</a>
    <p class="text-sm text-muted-foreground">{{ about }}</p>
  </div>
  <div class="flex gap-4 justify-center mb-64">
    <a href="{{ linkedin|d('#') }}" target="_blank" aria-label="Check out {{ name|safe }} on LinkedIn"><i class="fa-brands fa-linkedin" style="color: #0a66c2;"></i></a>
    <a href="{{ github|d('#') }}" target="_blank" aria-label="Check out {{ name|safe }} on GitHub"><i class="fa-brands fa-github" style="color:  #38434f;"></i></a>
  </div>
  <div class="flex justify-between mb-4">
    <p id="readingTime"></p>
    <p class="text-sm text-muted-foreground" id="calendarIcon">{{ timestamp|d("Updated Today") }}</p>
  </div>
</div>
{% endblock author %}
