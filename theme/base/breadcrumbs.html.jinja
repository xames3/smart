{%- set separator %}
<div class="mr-1">{{ theme_breadcrumbs_separator|default('/') }}</div>
{%- endset %}
<nav aria-label="{{ _('breadcrumbs') }}" class="flex justify-center mb-4 space-x-1 text-sm text-muted-foreground pt-64">
  <a class="overflow-hidden text-ellipsis whitespace-nowrap hover:text-foreground" href="{{ pathto(master_doc) }}">
    <i class="fa-regular fa-house" aria-label="Home" style="top: -2px; position: relative;"></i>
  </a>
  {%- if pagename != master_doc %}{{ separator }}{%- endif %}
  {%- for parent in parents -%}
  <a class="hover:text-foreground overflow-hidden text-ellipsis whitespace-nowrap" href="{{ parent.link|e }}">{{
    parent.title
    }}</a>
  {{ separator }}
  {%- endfor -%}
  <span aria-current="page" class="font-medium text-foreground overflow-hidden text-ellipsis whitespace-nowrap">
    {%- if pagename != master_doc %}{{ title }}{%- endif %}
  </span>
</nav>
