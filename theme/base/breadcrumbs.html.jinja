{%- set separator %}
    <span class="site-breadcrumbs__separator">{{ theme_breadcrumbs_separator|default("/") }}</span>
{%- endset %}
<nav aria-label="{{ _('breadcrumbs') }}"
     class="site-breadcrumbs">
    <a class="site-breadcrumbs__link site-breadcrumbs__link--home"
       href="{{ pathto(master_doc) }}">
        <i class="fa-regular fa-house"
           aria-label="Home"></i>
    </a>
    {%- if pagename != master_doc %}{{ separator }}{%- endif %}
        {%- for parent in parents -%}
            <a class="site-breadcrumbs__link"
               href="{{ parent.link|e }}">{{ parent.title }}</a>
            {{ separator }}
        {%- endfor -%}
        <span aria-current="page"
              class="site-breadcrumbs__current"
              id="currentBreadcrumb">
            {%- if pagename != master_doc %}{{ title }}{%- endif %}
            </span>
        </nav>
